<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundof"
    tools:context=".Main_Level"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="681dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="500dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:fontFamily="@font/bangers"
            android:gravity="center"
            android:text="Choose Your Level ❔"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="825dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="92dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:contentDescription="TODO1"
                android:src="@drawable/ic_user" />

            <Button
                android:id="@+id/level1"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/architects_daughter"
                android:text="Level 1"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                app:backgroundTint="#4DB6A6" />

            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="95dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:contentDescription="TODO3"
                android:src="@drawable/ic_student" />

            <Button
                android:id="@+id/level2"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:fontFamily="@font/architects_daughter"
                android:text="Level 2"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                app:backgroundTint="#4DB6A6" />

            <ImageView
                android:id="@+id/imageView04"
                android:layout_width="95dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:contentDescription="TODO3"
                android:src="@drawable/ic_graduate" />

            <Button
                android:id="@+id/level3"
                android:layout_width="95dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:fontFamily="@font/architects_daughter"
                android:text="Level 3"
                android:textAllCaps="false"
                android:textStyle="normal|bold"
                app:backgroundTint="#4DB6A6" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>