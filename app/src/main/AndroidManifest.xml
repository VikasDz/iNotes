<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/inotes"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.INotes">
        <activity
            android:name=".Activity_Info"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Compiler"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main_Level"
            android:exported="false"
            android:label="Choose Level 🎚"
            android:parentActivityName=".Activity_MainQuiz" />
        <activity
            android:name=".Activity_MainQuiz"
            android:exported="true"
            android:label="Take Quiz ❔"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity_Login"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity_Reg"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".Activity_SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_NavBar"
            android:label="Source Code 🔥"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity_PlayMusic"
            android:label="iMusic 🎶❤"
            android:parentActivityName=".Activity_Music" />
        <activity
            android:name=".Activity_Music"
            android:label="iMusic 🎶"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity_Pdf"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.INotes.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>